{
  "variables": {
    "name": "cbednarski/ubuntu-1404",
    "build_cpu_cores": "2",
    "build_memory": "1024",
    "cpu_cores": "1",
    "memory": "512",
    "disk_size": "40960",
    "headless": "true",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "push": {
    "name": "{{user `name`}}",
    "exclude": [
      ".git",
      "packer_cache",
      "output-vbox",
      "output-vmware",
      "*.box"
    ]
  },
  "builders": [
    {
      "name": "vmware",
      "ssh_password": "{{user `ssh_username`}}",
      "ssh_username": "{{user `ssh_password`}}",
      "ssh_host": "172.16.221.212",
      "type": "null",
      "communicator": "ssh",
      "ssh_pty": "true"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "script": "scripts/shutdown.sh",
      "type": "shell"
    }
  ]
}
